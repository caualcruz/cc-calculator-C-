<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageIcon>img-calculadora.png</PackageIcon>
    <Authors>Cauã Cruz</Authors>
    <PackageProjectUrl>https://github.com/caualcruz/cc-calculator-C-</PackageProjectUrl>
    <ApplicationIcon>assets\img-calculadora.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="assets\img-calculadora.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="assets\img-calculadora.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>